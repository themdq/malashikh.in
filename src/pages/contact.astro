---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ContactForm from '@/components/ContactForm';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';

const contactInfo = [
  {
    title: 'Email',
    value: 'dmitrii@malashikh.in',
    href: 'mailto:dmitrii@malashikh.in',
    label: '[email]',
  },
  {
    title: 'GitHub',
    value: '@themdq',
    href: 'https://github.com/themdq',
    label: '[github]',
  },
  {
    title: 'LinkedIn',
    value: '/in/themdq',
    href: 'https://linkedin.com/in/themdq',
    label: '[linkedin]',
  },
];
---

<BaseLayout title="Contact" description="Get in touch with me.">
  <section class="container py-12 md:py-24">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="space-y-4 mb-12">
        <h1 class="text-4xl font-bold tracking-tight">Get in Touch</h1>
        <p class="text-xl text-muted-foreground">
          Have a question or want to work together? I'd love to hear from you.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <Card>
            <CardHeader>
              <CardTitle>Send a Message</CardTitle>
              <CardDescription>
                Fill out the form below and I'll get back to you as soon as possible.
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ContactForm client:load />
            </CardContent>
          </Card>
        </div>

        <!-- Contact Info -->
        <div class="space-y-6">
          <div>
            <h2 class="text-xl font-semibold mb-4">Other Ways to Connect</h2>
            <div class="space-y-4">
              {contactInfo.map((info) => (
                <a
                  href={info.href}
                  target={info.href.startsWith('mailto') ? undefined : '_blank'}
                  rel={info.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
                  class="flex items-center gap-4 p-4 border border-dashed hover:border-foreground transition-colors"
                >
                  <span class="text-muted-foreground font-medium">{info.label}</span>
                  <div>
                    <p class="font-medium">{info.title}</p>
                    <p class="text-sm text-muted-foreground">{info.value}</p>
                  </div>
                </a>
              ))}
            </div>
          </div>

          <div class="p-6 border border-dashed">
            <h3 class="font-semibold mb-2">Response Time</h3>
            <p class="text-sm text-muted-foreground">
              I typically respond to messages within 24-48 hours.
              For urgent matters, please reach out via email directly.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
