---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'github', href: 'https://github.com/malashikhin' },
  { name: 'linkedin', href: 'https://linkedin.com/in/themdq' },
  { name: 'email', href: 'mailto:hello@malashikh.in' },
];
---

<footer class="border-t bg-background">
  <div class="container py-8 md:py-12">
    <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <div class="flex flex-col items-center md:items-start space-y-2">
        <span class="text-lg font-semibold">[dm]</span>
        <p class="text-sm text-muted-foreground">
          Building things for the web
        </p>
      </div>

      <div class="flex items-center space-x-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target={link.href.startsWith('mailto') ? undefined : '_blank'}
            rel={link.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            [{link.name}]
          </a>
        ))}
      </div>
    </div>

    <div class="mt-8 pt-8 border-t text-center text-sm text-muted-foreground">
      <p>(c) {currentYear} Dmitrii Malashikhin</p>
    </div>
  </div>
</footer>
