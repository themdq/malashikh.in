---
interface Props {
  name: string;
  level?: 'beginner' | 'intermediate' | 'advanced' | 'expert';
}

const { name, level = 'intermediate' } = Astro.props;

const levelColors = {
  beginner: 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200',
  intermediate: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
  advanced: 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200',
  expert: 'bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-200',
};
---

<span
  class:list={[
    'inline-flex items-center rounded-md px-3 py-1.5 text-sm font-medium transition-transform hover:scale-105',
    levelColors[level],
  ]}
>
  {name}
</span>
