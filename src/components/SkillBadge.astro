---
interface Props {
  name: string;
  level?: 'beginner' | 'intermediate' | 'advanced' | 'expert';
}

const { name, level = 'intermediate' } = Astro.props;

const levelColors = {
  beginner: 'text-flexoki-blue',
  intermediate: 'text-flexoki-green',
  advanced: 'text-flexoki-purple',
  expert: 'text-flexoki-orange',
};
---

<span
  class:list={[
    'inline-flex items-center border border-current px-3 py-1.5 text-sm font-medium transition-colors hover:border-foreground',
    levelColors[level],
  ]}
>
  {name}
</span>
